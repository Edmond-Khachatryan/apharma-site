// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Модель пользователя (администратора)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Категории лекарств
model Category {
  id        String     @id @default(cuid())
  name      String
  slug      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  medicines Medicine[]
}

// Лекарства
model Medicine {
  id          String   @id @default(cuid())
  name        String   // Русский (основной)
  nameEn      String?  // English
  nameHy      String?  // Հայերեն
  description String   // Русский (основной)
  descriptionEn String? // English
  descriptionHy String? // Հայերեն
  image       String?
  inStock     Boolean  @default(true)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Партнеры
model Partner {
  id          String   @id @default(cuid())
  name        String   // Русский (основной)
  nameEn      String?  // English
  nameHy      String?  // Հայերեն
  description String   // Русский (основной)
  descriptionEn String? // English
  descriptionHy String? // Հայերեն
  logo        String?
  website     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Аптеки
model Pharmacy {
  id        String   @id @default(cuid())
  name      String
  address   String
  phone     String
  hours     String
  latitude  Float?   // Координаты для карты
  longitude Float?   // Координаты для карты
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Статьи блога
model BlogPost {
  id        String   @id @default(cuid())
  title     String   // Русский (основной)
  titleEn   String?  // English
  titleHy   String?  // Հայերեն
  excerpt   String   // Русский (основной)
  excerptEn String?  // English
  excerptHy String?  // Հայերեն
  content   String   // Русский (основной)
  contentEn String?  // English
  contentHy String?  // Հայերեն
  image     String?
  author    String
  category  String
  readTime  String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
